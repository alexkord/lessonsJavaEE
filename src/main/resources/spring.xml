<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.spring.basic_of_spring.Client">
        <constructor-arg value="3044312555"/>
        <constructor-arg value="Alex Axent"/>
    </bean>

    <bean id="eventLogger" class="com.spring.basic_of_spring.ConsoleEventLogger"/>

    <bean id="app" class="com.spring.basic_of_spring.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="com.spring.basic_of_spring.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
    </bean>

</beans>